<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml"
		Title="@[Properties]">
	<Dialog.Buttons>
		<Button Style="Primary" Content="@[SaveAndClose]" 
				Command="{BindCmd SaveAndClose, ValidRequired=True}"/>
		<Button Content="@[Cancel]" Command="{BindCmd Close}"/>
	</Dialog.Buttons>
	<Grid>
		<TextBox Label="@[Name]" Value="{Bind Report.Name}"/>
		<Selector Label="@[Account]" Value="{Bind Report.Account}" DisplayProperty="$Title">
			<Selector.AddOns>
				<Hyperlink Icon="Search" Command="{BindCmd Browse, Argument={Bind Report.Account}, Url='/catalog/account/browseall'}"/>
			</Selector.AddOns>
		</Selector>
		<ComboBox Label="Тип звіту" ItemsSource="{Bind Report.$RepTypes}" Value="{Bind Report.Url}">
			<ComboBoxItem Content="{Bind Name}" Value="{Bind Url}"/>
		</ComboBox>
		<Static Value="{Bind Report.Url}" If="False"/>
		<TextBox Label="@[Memo]" Value="{Bind Report.Memo}" Multiline="True" Rows="3"/>
	</Grid>
</Dialog>